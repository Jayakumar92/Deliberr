<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="#f6f6f7"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/parent_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <example.jayakumar.deliberr.customviews.F1TextViewBold
                    android:id="@+id/mission_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="5dp"
                    android:text=""
                    android:textColor="@color/secondaryColor"
                    android:textSize="@dimen/text_largex" />


            </RelativeLayout>

            <example.jayakumar.deliberr.customviews.F1TextViewRegular
                android:id="@+id/rocket_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginTop="-3dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="@dimen/text_smallx" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_toLeftOf="@+id/launch_date_ly"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_location" />

                    <example.jayakumar.deliberr.customviews.F1TextViewMedium
                        android:id="@+id/launches_site_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="0dp"
                        android:text=""
                        android:textSize="@dimen/text_small" />

                </LinearLayout>


                <LinearLayout

                    android:id="@+id/launch_date_ly"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:src="@drawable/ic_date" />

                    <example.jayakumar.deliberr.customviews.F1TextViewMedium
                        android:id="@+id/launch_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="0dp"
                        android:text="19th May 2015"
                        android:textSize="@dimen/text_small" />

                </LinearLayout>

            </LinearLayout>


            <example.jayakumar.deliberr.customviews.F1TextViewRegular
                android:id="@+id/details_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:maxLines="3"
                android:padding="5dp"
                android:text=""
                android:textColor="@color/gery_2"
                android:textSize="@dimen/text_small" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>